{
    "name": "glicer/w3c-validator",
    "type": "library",
    "description": "Validates html and css using w3c markup and css validation free services",
    "keywords": ["w3c", "validate", "html", "css"],
    "homepage": "https://github.com/emmanuelroecker/php-w3cvalidator",
    "license": "MIT",
    "authors": [
        {
            "name": "Emmanuel ROECKER",
            "homepage": "http://dev.glicer.com"
        },
        {
            "name": "Rym BOUCHAGOUR",
            "homepage": "http://dev.glicer.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "guzzlehttp/guzzle": "^6.5",
        "symfony/filesystem": "~2.3|~3.0",
        "symfony/finder": "~2.3|~3.0",
        "glicer/simply-html": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8",
        "satooshi/php-coveralls": ">=0.7"
    },
    "autoload": {
        "psr-4": {
            "GlValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GlValidator\\Tests\\": "tests/"
        }
    }
}
